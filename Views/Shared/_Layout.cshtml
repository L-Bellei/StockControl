<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockControl</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StockControl.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <a class="home-link" asp-area="" asp-controller="Home" asp-action="Index">StockControl</a>
            <ul class="nav-itens">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Category">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Product">Products</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main"class="container">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
            <p>&copy; 2022 - StockControl</p>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
